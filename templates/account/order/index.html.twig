{% extends 'base.html.twig' %}

{% block body %}

    <div class="container my-5">
        <h1>Espace membre</h1>

        <div class="row w-100">
            <div class="col-md-3">
                {% include 'account/_menu.html.twig' %}
            </div>

            <div class="col-md-9">
                <small><a href="{{ path('app_account') }}" class="btn btn-light btn-sm">Retour</a> 

                <h5 class="mt-4">Ma commande n°{{ order.id }}</h5>
                <span>Passée le : {{ order.createdAt|date('d/m/Y') }}</span><br/>
                <span>Statut : {{ order.state }}</span><br/>
                <br/>
                <hr>

                <div class="row my-4">
                    <div class="col-md-6">
                        <strong>Adresse de livraison :</strong><br/>
                        {{ order.delivery|raw }}
                    </div>
                </div>

                <hr>

                <strong>Contenu de la commande :</strong><br/>

                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">Illustration</th>
                        <th scope="col">Nom du produit</th>
                        <th scope="col">Quantité</th>
                        <th scope="col">Total T.T.C</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for product in order.orderDetails %}
                        <tr>
                            <td>
                                <img src="/build/images/boutique/{{ product.productIllustration }}" width="100px" alt="">
                            </td>
                            <td>{{ product.productName }}</td>
                            <td>{{ product.productQuantity }}</td>
                            <td>{{ product.productPrice}}</td>
                            
                            <td>{{ product.productPrice * product.productQuantity }}</td>

                        </tr>
                    {% endfor %}
                    
                    </tbody>
                </table>

                <div>
                    
                    <strong>Total T.T.C : </strong> {{ order.totalPrice }} €
                </div>

            </div>
        </div>

    </div>

{% endblock %}
