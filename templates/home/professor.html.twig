{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<section class="container my-5">
  <div class="row align-items-center">

    <!-- Bloc texte + IMG1 superposée dans le coin -->
    <div class="col-md-6 mb-4 mb-md-0 position-relative" style="z-index: 1; margin-top: -90px;">
      <div class="p-4" style="background-color: #b98973; color: white; border-radius: 12px; position: relative; z-index: 2;">
        <h6 class="text-uppercase" style="margin-bottom: 10px;">Cours de danse</h6>
        <h1 style="font-size: 28px; font-weight: 300; line-height: 1.3;">Classique &amp; Contemporain<br>Malansac</h1>
        <a href="#" style="display: inline-block; margin-top: 20px; padding: 10px 20px; border: 1px solid white; color: white; text-decoration: none; border-radius: 5px;">Voir les cours</a>
      </div>

      <!-- IMG1 superposée dans le coin bas droit -->
      <img 
        src="{{ asset('build/images/accueil/IMG1.jpg') }}" 
        alt="Danse classique"
        style="
          position: absolute;
          bottom: -130px;
          right: -30px;
          width: 60%;
          border-radius: 12px;
          box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
          z-index: 2;
        ">
    </div>

    <!-- IMG2 à droite -->
    <div class="col-md-5 offset-md-1">
      <img 
        src="{{ asset('build/images/accueil/IMG2.jpg') }}" 
        class="img-fluid rounded shadow" 
        alt="Danse contemporaine">
    </div>
  </div>
</section>

{% endblock %}



