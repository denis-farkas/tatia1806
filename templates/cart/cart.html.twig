{% extends 'base.html.twig' %}


{% block title %}Votre Panier{% endblock %}

{% block body %}
<h1 class="text-center mt-5">Votre Panier</h1>

<div class="cart-page py-5">

    <div class="cart-items">

        {# Produits #}
        {% if cart|length > 0 %}
            {% for item in cart %}
                <div class="cart-item">
                    <div class="item-image">
                        <img src="{{ asset('build/images/' ~ item.object.image1) }}" alt="{{ item.object.name }}">
                    </div>
                    <div class="item-details">
                        <p class="item-price">{{ item.object.price }} €</p>
                        <h6>{{ item.object.name }}</h6>
                        <form action="{{ path('decrease_quantity', {id: item.object.id}) }}" method="POST" class="d-inline">
                            <button type="submit" class="btn-quantity">
                                <i class="fas fa-minus"></i>
                            </button>
                        </form>
                        <p class="item-actions-p">Qté: {{ item.qty }}</p>
                        <form action="{{ path('increase_quantity', {id: item.object.id}) }}" method="POST" class="d-inline">
                            <button type="submit" class="btn-quantity">
                                <i class="fas fa-plus"></i>
                            </button>
                        </form>
                        <form action="{{ path('remove_from_cart', {id: item.object.id}) }}" method="POST">
                            <button type="submit" class="btn-remove">
                                Suppression
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {# Cours #}
        {% set cours_cart = app.session.get('cours_cart', []) %}
        {% if cours_cart|length > 0 %}
            {% for item in cours_cart %}
                <div class="cart-item">
                    <div class="item-details">
                        <p class="item-price">{{ item.cours.price|number_format(2, ',', ' ') }} €</p>
                        <h6>{{ item.cours.name }}</h6>
                        <p>
                            Pour : <strong>{{ item.child_firstname }} {{ item.child_lastname }}</strong><br>
                            Jour : {{ item.cours.day }}<br>
                            Heure : {{ item.cours.startHour ? item.cours.startHour|date('H:i') : '' }} - {{ item.cours.endHour ? item.cours.endHour|date('H:i') : '' }}
                        </p>
                        <form action="{{ path('remove_cours_from_cart', {id: item.cours_id, child: item.child_firstname ~ '-' ~ item.child_lastname}) }}" method="POST">
                            <button type="submit" class="btn-remove">
                                Retirer ce cours
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        {% endif %}

        {% if cart|length == 0 and cours_cart|length == 0 %}
            <h3 class="mx-auto">Votre panier est vide.</h3>
        {% endif %}

    </div>

    <div class="cart-summary">
        <h2>Total</h2>
        <div class="cart-summary-details">
            <p class="cart-total">Sous-total <span>{{ totals.subtotal }} €</span></p>
            <p class="shipping-info">Livraison standard <span>{{ totals.shipping }} €</span></p>
            <p class="cart-final-total">Total <span>{{ totals.total }} €</span></p>
        </div>
        <div class="payment-options">
            <a href="{{ path('app_order') }}" class="btn bg-gold white">Commander</a>
            <a href="{{ path('app_product') }}" class="btn btn-secondary">Continuer mes achats</a>
        </div>
    </div>

</div>
{% endblock %}