{% extends 'base.html.twig' %}

{% block body %}
<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="m-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ path('app_gala') }}">Liste des Galas</a></li>
        <li class="breadcrumb-item active" aria-current="page">Galerie du gala {{ gala.name }}</li>
    </ol>
</nav>

<h1 class="text-center my-4">Nos images pour le gala de {{ gala.name }}</h1>

<div class="row w-75 mx-auto">
    {% for result in coursImages %}
        {% set image = result[0] %}
        {% set coursName = result['coursName'] %}
        {% set coursAge = result['coursAge'] %}
        {% set coursSalle = result['coursSalle'] %}

        <div class="col-md-4 col-lg-4 col-sm-12 mb-4">
            <div class="card mb-4">
                <img src="{{ asset('images/galas/' ~ image.filename) }}" class="card-img-top" alt="{{ coursName }}">
                <div class="card-body">
                    <h5 class="card-title">{{ coursName ~ ' (' ~ coursAge ~ ', ' ~ coursSalle ~ ')' }}</h5>
                    <a href="{{ path('app_gala_cours_gallery', { id: gala.id, cours: image.cours }) }}" class="btn bg-gold white">Voir les images</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}